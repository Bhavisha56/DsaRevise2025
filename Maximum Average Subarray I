class Solution {
    public double findMaxAverage(int[] nums, int k) {
        int n=nums.length;
        double ans=Integer.MIN_VALUE;
     double windSum=0;
     int windoStart=0;
     for(int windend=0;windend<n;windend++){
        windSum+=nums[windend];
        if(windend>=k-1){
        ans=Math.max(ans,windSum/k);
        windSum-=nums[windoStart];
        windoStart++;
        }
     }
     return ans;
    }
}
